{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Docker Debug",
            "type": "node",
            "request": "attach",
            "port": 10004,
            "address": "127.0.0.1",
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/srv/www",
            "protocol": "inspector",
            "timeout": 100000,
            "restart": true
        },
        {
            "name": "Local Debug",
            "port": 9229,
            "request": "attach",
            "skipFiles": ["<node_internals>/**"],
            "type": "pwa-node",
            "restart": true
        }
    ]
}
